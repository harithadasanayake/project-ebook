@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <title>@ViewData["Title"]</title>
    <style>
        body {
      
            font-family: 'Poppins', sans-serif;
        }

        .glass {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        }

        input {
            background-color: white;
            color: black;
            font-size: 14px;
        }

        .btn-login {
            background-color: #002D74;
            color: white;
            transition: transform 0.3s ease, background-color 0.3s ease, color 0.3s ease;
        }

            .btn-login:hover {
                transform: scale(1.05);
                background-color: white;
                color: #002D74;
            }

        .btn-signup {
            background-color: white;
            color: #002D74;
            transition: transform 0.3s ease, background-color 0.3s ease, color 0.3s ease;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
        }

            .btn-signup:hover {
                transform: scale(1.05);
                background-color: #002D74;
                color: white;
            }

        .title {
            font-size: 14px;
        }

        h2 {
            font-size: 25px;
        }

        .text-red-500 {
            font-size: 12px;
        }

        .dont {
            font-size: 11px;
            font-weight: normal;
        }

        .password-toggle-btn {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
        }

        .form-gap {
            margin-bottom: 5px; /* Reduced margin */
        }

        .top-margin {
            margin-top: 70px; /* Adjusted margin for navbar overlap */
        }
    </style>
</head>
<body>
    <section class="bg-gray-50 min-h-screen flex items-center justify-center top-margin" style="background: none;">
        <div class="glass flex rounded-2xl shadow-lg max-w-6xl p-5 items-center w-full">
            <div class="md:w-1/2 px-8 md:px-16">
                <h2 class="font-bold text-2xl text-gray-200 title">Register</h2>
                <p class="title mt-4 text-gray-300">Create a new account</p>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex flex-col gap-2">
                    <!-- Adjusted gap -->
                    <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
                    <input class="p-2 mt-4 rounded-xl border form-gap" asp-for="Input.FirstName" autocomplete="firstname" aria-required="true" placeholder="First Name" />
                    <span asp-validation-for="Input.FirstName" class="text-red-500"></span>

                    <input class="p-2 rounded-xl border form-gap" asp-for="Input.LastName" autocomplete="lastname" aria-required="true" placeholder="Last Name" />
                    <span asp-validation-for="Input.LastName" class="text-red-500"></span>

                    <input class="p-2 rounded-xl border form-gap" asp-for="Input.MobileNumber" autocomplete="mobilenumber" aria-required="true" placeholder="Mobile Number" />
                    <span asp-validation-for="Input.MobileNumber" class="text-red-500"></span>

                    <input class="p-2 rounded-xl border form-gap" asp-for="Input.Address" autocomplete="address" aria-required="true" placeholder="Address" />
                    <span asp-validation-for="Input.Address" class="text-red-500"></span>

                    <input class="p-2 rounded-xl border form-gap" asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>

                    <div class="relative form-gap">
                        <input class="p-2 rounded-xl border w-full" asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="Password" />
                        <button type="button" onclick="togglePasswordVisibility()" class="password-toggle-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gray" class="bi bi-eye" viewBox="0 0 16 16">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                            </svg>
                        </button>
                        <span asp-validation-for="Input.Password" class="text-red-500"></span>
                    </div>

                    <input class="p-2 rounded-xl border form-gap" asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>

                    <button id="registerSubmit" type="submit" class="btn-login rounded-xl py-2 cursor-pointer">Register</button>
                </form>

                <div class="mt-3 text-xs flex justify-between items-center text-[#002D74]">
                    <p class='text-gray-300 dont'>Already have an account?</p>
                    <a href='/login' class="btn-signup py-2 px-5 border rounded-xl hover:scale-110 duration-300">Log In</a>
                </div>
            </div>
            <div class="md:block hidden w-1/2">
                <img class="rounded-2xl" src="~/images/background.jpg" alt="Register" loading="lazy" />
            </div>
        </div>
    </section>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.querySelector('input[asp-for="Input.Password"]');
            const toggleBtn = document.querySelector('.password-toggle-btn');

            if (passwordInput.getAttribute('type') === 'password') {
                passwordInput.setAttribute('type', 'text');
                toggleBtn.innerHTML = `
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gray" class="bi bi-eye-slash" viewBox="0 0 16 16">
                            <path d="M13.359 11.238l1.049 1.049a7.978 7.978 0 0 0 1.42-1.912 7.978 7.978 0 0 0-1.42-1.912l-1.049 1.049a5.977 5.977 0 0 1 1.007 1.777c.04.195.069.392.087.59H14.1a5.978 5.978 0 0 1-1.007-1.777l-1.05 1.049a5.978 5.978 0 0 1-1.775 1.007H9.82a5.978 5.978 0 0 1 1.775-1.007l1.05-1.049a5.977 5.977 0 0 1 1.007-1.777zM1.22 1.22a.5.5 0 0 0-.708 0L0 1.732a7.978 7.978 0 0 0 1.714 2.516l1.176 1.176a13.005 13.005 0 0 0-1.176 2.516A7.978 7.978 0 0 0 0 10.268l1.238 1.238a7.978 7.978 0 0 0 2.516-1.714L4.93 8.614a5.977 5.977 0 0 1-1.714-2.516 13.005 13.005 0 0 0 2.516-1.176L1.22 1.22zm6.78 3.09a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zm0 1a1.5 1.5 0 1 1-1.5 1.5 1.5 1.5 0 0 1 1.5-1.5z"/>
                        </svg>`;
            } else {
                passwordInput.setAttribute('type', 'password');
                toggleBtn.innerHTML = `
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gray" class="bi bi-eye" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zm-1.173 0a13.133 13.133 0 0 1-1.66 2.043C11.88 11.332 10.12 12.5 8 12.5s-3.879-1.168-5.168-2.457A13.133 13.133 0 0 1 1.172 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8zM8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5z"/>
                        </svg>`;
            }
        }
    </script>
</body>
</html>
