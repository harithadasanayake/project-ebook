    <style>
        .card-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            padding: 40px;
            gap: 30px;
            max-width: 1600px;
            margin: 0 auto;
        }

        .feature-card {
            /* Set to 48% to allow for gap between cards */
            width: calc(50% - 15px);
            background: white;
            border-radius: 12px;
            padding: 32px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            align-items: center;
            gap: 30px;
            min-height: 200px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 15px rgba(0,0,0,0.2);
            }

        .card-left {
            display: flex;
            flex-direction: column;
            align-items: center;
            min-width: 180px;
        }

        .card-right {
            flex: 1;
            display: flex;
            align-items: center;
            padding-left: 25px;
            border-left: 2px solid #e5e7eb;
            min-height: 120px;
        }

        .card-icon {
            /* width: 150px; */
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f0f7ff;
            border-radius: 50%;
            color: #2563eb;
            margin-bottom: 20px;
        }

            .card-icon i {
                font-size: 32px;
            }

        .card-title {
            font-size: 2.0rem;
            font-weight: 600;
            color: #1f2937;
            text-align: center;
            margin: 0;
        }

        .card-description {
            font-size: 1.5rem;
            color: #6b7280;
            line-height: 1.6;
            margin: 0;
        }

        .book-card-title{
            font-size: 2rem;
            font-weight: 400;
            color: #1f2937;
            text-align: left;
            margin: 0;
        }
    </style>

</head>

<body id="top" class="has-bg-image" style="background-image: url('/assets/images/hero-bg.jpg')">

  <!-- 
    - #HEADER
  -->

  <main>
    <article>

      <!-- 
        - #HERO
      -->

      <section class="section hero has-bg-image" aria-label="home"
        >
        <div class="container">

          <div class="hero-content">

            <h1 class="h1 hero-title">
             Expand Your Library,  <br>
             One Book at a Time
            </h1>

            <p class="hero-text">
             Discover a curated collection of pre-loved books, from timeless classics to hidden gems. Shop sustainably, save money, and give a new home to stories waiting to be read.
            </p>

            <div class="btn-wrapper">

              <a href="#" class="btn explore">
                <span class="span">Explore More</span>
              </a>

            </div>

          </div>

          <!-- <figure class="hero-banner">
            <img src="~/assets/images/hero-banner.png" width="475" height="600" alt="hero banner" class="w-100">
          </figure> -->

        </div>
      </section>


      <!-- 
        - #FEATURE
      -->

            <div class="card-container">
                <div class="feature-card">
                    <div class="card-left">
                        <div class="card-icon">
                            <i class="fas fa-book"></i>
                        </div>
                        <h3 class="card-title">Wide Selection</h3>
                    </div>
                    <div class="card-right">
                        <p class="card-description">Browse through thousands of pre-loved books across all genres</p>
                    </div>
                </div>

                <div class="feature-card">
                    <div class="card-left">
                        <div class="card-icon">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <h3 class="card-title">Free Shipping</h3>
                    </div>
                    <div class="card-right">
                        <p class="card-description">Enjoy free delivery on orders above 5000LKR</p>
                    </div>
                </div>

                <div class="feature-card">
                    <div class="card-left">
                        <div class="card-icon">
                            <i class="fas fa-exchange-alt"></i>
                        </div>
                        <h3 class="card-title">Book Exchange</h3>
                    </div>
                    <div class="card-right">
                        <p class="card-description">Trade your old books for store credit</p>
                    </div>
                </div>

                <div class="feature-card">
                    <div class="card-left">
                        <div class="card-icon">
                            <i class="fas fa-tags"></i>
                        </div>
                        <h3 class="card-title">Best Prices</h3>
                    </div>
                    <div class="card-right">
                        <p class="card-description">Get up to 70% off compared to new book prices</p>
                    </div>
                </div>
            </div>



      <!-- 
        - #FEATURED COLLECTION
      -->
            <section class="section featured" aria-label="featured collection">
                <div class="container">
                    <h2 class="h2 section-title">Latest books</h2>
                    <p class="section-text">
                        Browse latest books
                    </p>
                    <ul class="grid-list">
                        @foreach (var book in Model)
                        {
                            <li>
                                <div class="product-card">
                                    <span class="card-badge">New</span>
                                    <div class="card-banner img-holder" style="--width: 384; --height: 480; border-radius: 10px">
                                        <img src="data:image/png;base64,@Convert.ToBase64String(book.CoverImage)" width="384" height="480" loading="lazy" alt="@book.Title" class="img-cover">
                                       
                                    </div>
                                    <div class="card-content book-card-content">
                                        <h3 class="h3">
                                            <a href="@Url.Action("Details", "Book", new { id = book.Id })" class="book-card-title">@book.Title</a>
                                        </h3>
                                        <data class="card-price" value="@book.Price">Rs. @book.Price</data>
                                        <div class="rating-wrapper">
                                            <ion-icon name="star-outline" aria-hidden="true"></ion-icon>
                                            <ion-icon name="star-outline" aria-hidden="true"></ion-icon>
                                            <ion-icon name="star-outline" aria-hidden="true"></ion-icon>
                                            <ion-icon name="star-outline" aria-hidden="true"></ion-icon>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </section>


    </article>
  </main>





