@model eBookSystem.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eBookSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eBookSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin/AdminStyle.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
        }

        aside {
            width: 200px;
            margin-right: 20px;
            flex: 0 0 auto;
        }

        .sidebar {
            padding: 20px;
        }

        main {
            flex: 1;
            padding: 20px;
            margin-right: 20px;
            display: flex;
            flex-direction: column;
            gap: 20px;
            width:100%
        }

        .right-section {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin-top: 20px;
            flex: 1 0 auto;
        }

        .nav {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .nav .dark-mode {
                margin-left: auto;
            }

            .nav .profile {
                display: flex;
                align-items: center;
                margin-left: 20px;
            }

        .profile-photo img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-left: 10px;
        }

        .reminders {
            margin-top: 20px;
        }

        .recent-orders table {
            width: 100%;
            border-collapse: collapse;
        }

        .recent-orders th, .recent-orders td {
            padding: 8px;
            text-align: left;
            border: none; /* Remove borders */
            background: none; /* Remove background color */
        }

        .recent-orders th {
            background-color: #f2f2f2;
        }

        .most-popular-books {
            display: flex;
            gap: 20px;
        }

        .book {
            text-align: center;
            flex: 1;
        }

            .book img {
                width: 200px; /* Make books bigger */
                height: 300px;
                border-radius: 10px; /* Rounded corners */
            }

        .new-users {
            height: 400px; /* Make the div longer */
        }

        .user-list {
            display: flex;
            gap: 20px;
            justify-content: space-around; /* Distribute books evenly */
        }

        .user, .book {
            flex: 1;
            text-align: center;
        }

            .user img, .book img {
                width: 200px; /* Make books bigger */
                height: 300px;
                border-radius: 10px; /* Rounded corners for books and user images */
            }

        .analyse, .new-users, .recent-orders {
            flex: 1; /* Make each div fill the empty space */
        }
    </style>
</head>
<body>
    <main>
        <h1>Dashboard</h1>
        <div class="analyse">
            <div class="sales">
                <div class="status">
                    <div class="info">
                        <h3>Total Sales</h3>
                        <h1>@Model.TotalSales.ToString("C")</h1>
                    </div>
                  
                </div>
            </div>
            <div class="visits">
                <div class="status">
                    <div class="info">
                        <h3>Total Sales Count</h3>
                        <h1>@Model.TotalSalesCount</h1>
                    </div>
                   
                </div>
            </div>
            <div class="searches">
                <div class="status">
                    <div class="info">
                        <h3>Total Users</h3>
                        <h1>@Model.TotalUsers</h1>
                    </div>
                   
                </div>
            </div>
        </div>

        
        <div class="recent-orders">
            <h2>Recent Orders</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Total Amount</th>
                        <th>Order Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentOrders != null && Model.RecentOrders.Count > 0)
                    {
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.FullName</td>
                                <td>@order.TotalAmount.ToString("C")</td>
                                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                <td>@order.Status</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">No recent orders found.</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="#">Show All</a>
        </div>

        <div class="new-users">
            <h2>Most Popular Books</h2>
            <div class="user-list">
                @if (Model.MostPopularBooks != null && Model.MostPopularBooks.Count > 0)
                {
                    @foreach (var book in Model.MostPopularBooks)
                    {
                        <div class="book">
                            <img src="data:image/jpeg;base64,@(book.CoverImage != null ? Convert.ToBase64String(book.CoverImage) : "")" alt="Book Cover" />
                        </div>
                    }
                }
                else
                {
                    <p>No popular books found.</p>
                }
            </div>
        </div>

    </main>
    <script src="~/assets/js/orders.js"></script>
    <script src="~/assets/js/mode.js"></script>
</body>
</html>