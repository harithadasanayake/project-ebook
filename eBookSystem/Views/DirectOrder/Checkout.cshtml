@model DirectCheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<div class="container">
    <br />
    <br />

    <div class="checkout-content">
        <div class="cart-details">
            <h3>Order Summary</h3>
            <div class="cart-items-container">
                <ul class="list-group">
                    <li class="list-group-item cart-item">
                        <div class="item-image">
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Book.CoverImage)" alt="@Model.Book.Title" />
                        </div>
                        <div class="item-details">
                            <h4 class="item-title">@Model.Book.Title</h4>
                            <div class="item-isbn">ISBN: @Model.Book.ISBN</div>
                            <div class="item-quantity">
                                <span class="quantity">@Model.Quantity</span>
                            </div>
                        </div>
                        <div class="item-total">
                            <div>@Model.Quantity x Rs. @Model.Book.Price = Rs. @(Model.Quantity * Model.Book.Price)</div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="cart-footer">
                <h4>Total: Rs. @Model.TotalAmount</h4>
            </div>
        </div>
        <div class="checkout-form glassmorphism">
            <h3>Shipping details</h3>
            <form asp-action="ProcessCheckout" method="post">
                <div class="form-group">
                    <label for="FullName">Full Name</label>
                    <input type="text" class="form-control" id="FullName" name="FullName" required />
                </div>
                <div class="form-group">
                    <label for="Address">Address</label>
                    <input type="text" class="form-control" id="Address" name="Address" required />
                </div>
                <div class="form-group">
                    <label for="City">City</label>
                    <input type="text" class="form-control" id="City" name="City" required />
                </div>
                <div class="form-group">
                    <label for="State">State</label>
                    <input type="text" class="form-control" id="State" name="State" required />
                </div>
                <div class="form-group">
                    <label for="ZipCode">Zip Code</label>
                    <input type="text" class="form-control" id="ZipCode" name="ZipCode" required />
                </div>
                <div class="form-group">
                    <label for="Country">Country</label>
                    <input type="text" class="form-control" id="Country" name="Country" required />
                </div>
                <input hidden type="text" class="form-control" id="TotalAmount" name="TotalAmount" readonly value="@Model.TotalAmount" />
                <input hidden type="text" class="form-control" id="BookId" name="BookId" readonly value="@Model.BookId" />
                <input hidden type="text" class="form-control" id="Quantity" name="Quantity" readonly value="@Model.Quantity" />
                <div class="form-group">
                    <button type="submit" class="checkout-btn">Proceed to Payment</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        color: #000000;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
    }

    h3{
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .checkout-content {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .cart-details, .checkout-form {
        flex: 1;
        padding: 20px;
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        position: relative;
        height: 600px;
    }

    .cart-details {
        width: calc(50% - 20px);
    }

    .checkout-form {
        width: calc(50% - 20px);
    }

    .cart-items-container {
        max-height: 400px;
        overflow-y: auto;
    }

    .cart-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        margin-bottom: 10px;
    }

    .item-image img {
        width: 80px;
        height: auto;
    }

    .item-details {
        flex-grow: 1;
        margin-left: 20px;
    }

    .item-title {
        font-size: 18px;
        font-weight: bold;
    }

    .item-isbn {
        font-size: 14px;
        color: #aaaaaa;
    }

    .item-quantity {
        display: flex;
        align-items: center;
        margin-top: 10px;
    }

    .quantity {
        font-size: 18px;
        margin: 0 5px;
    }

    .item-price, .item-total {
        font-size: 16px;
        font-weight: bold;
        margin-top: 10px;
        text-align: right;
        min-width: 100px;
    }

    .item-action {
        margin-left: 20px;
    }

    .cart-footer {
        margin-top: 20px;
        text-align: right;
        font-size: 18px;
        font-weight: bold;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background: rgba(255, 255, 255, 0.2);
        position: sticky;
        bottom: 0;
        width: 100%;
    }

    .clear-cart-btn, .checkout-btn {
        padding: 15px 30px;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        transition: 0.3s;
        font-family: Arial, sans-serif;
    }

    .clear-cart-btn {
        background-color: #ff5555;
        color: #ffffff;
    }

        .clear-cart-btn:hover {
            background-color: #e04a4a;
        }

    .checkout-btn {
        background-color: var(--maximum-blue-green);
        color: #ffffff;
    }

        .checkout-btn:hover {
            background-color: var(--selective-yellow);
        }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        box-sizing: border-box;
        background-color: #ffffff;
        color: #000000;
    }



    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    button[type="submit"] {
        padding: 15px 30px;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        transition: 0.3s;
        background-color: #6200ee;
        color: white;
    }

        button[type="submit"]:hover {
            background-color: #3700b3;
        }

</style>